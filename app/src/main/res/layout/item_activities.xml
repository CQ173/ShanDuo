<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_details"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        >

        <RelativeLayout
            android:id="@+id/rl_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            >

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/head"
                android:layout_centerVertical="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:id="@+id/tv_host"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小猪佩奇"
                    android:textColor="@color/home_title_color"
                    android:textSize="12dp"
                    android:paddingBottom="2dp"
                    />

                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:text="SVIP2"
                    android:textSize="7sp"
                    android:layout_below="@+id/tv_host"
                    android:background="@drawable/rounded_tv_vip"
                    android:textColor="@color/color_white"
                    android:layout_toRightOf="@+id/tv_home_age"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tv_home_age"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:text="23"
                    android:textSize="7sp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/rounded_tv_sex_women"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:drawableLeft="@drawable/icon_women"
                    android:drawablePadding="2dp"
                    android:layout_below="@+id/tv_host"
                    />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/share_font_size"
                    android:textColor="@color/home_sex_man_color"
                    android:layout_alignParentRight="true"
                    android:text="2018-08-05"
                    android:layout_marginBottom="3dp"
                    android:layout_alignBottom="@+id/tv_host"
                    />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止日期:2018/04/23/23:00"
                    android:textSize="7dp"
                    android:textColor="@color/font_color_gray"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_time"
                    />



            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主题:"
                android:textSize="@dimen/act_item_font_size"
                android:textColor="@color/mainfont"
                />

            <TextView
                android:id="@+id/tv_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约饭"
                android:textSize="@dimen/act_item_font_size"
                android:textColor="@color/mainfont"
                />


            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AA制"
                android:textSize="@dimen/act_item_font_size"
                android:textColor="@color/font_black_color"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="地点:"
                android:textSize="@dimen/act_item_font_size"
                android:textColor="@color/mainfont"
                />

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_place"
                android:text="xx市"
                android:textColor="@color/font_black_color"
                android:textSize="@dimen/share_font_size" />

            <TextView
                android:id="@+id/tv_mile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="1.6km"
                android:textColor="@color/home_sex_man_color"
                android:textSize="@dimen/share_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="活动内容:"
                android:textSize="@dimen/act_item_font_size"
                android:textColor="@color/mainfont"
                />

            <TextView
                android:id="@+id/tv_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="还在等什么，赶紧加入吧"
                android:textSize="@dimen/share_font_size"
                android:textColor="@color/font_black_color"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="21dp"
            >

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_three_point"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                />

            <TextView
                android:clickable="true"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:id="@+id/tv_join"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="取消报名"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/iv_more"
                android:gravity="center"
                android:background="@drawable/rounded_textview_home"
                android:textColor="@color/color_white"
                android:layout_centerVertical="true"
                />

            <TextView
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:id="@+id/tv_evaluation"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="信用轨迹"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/tv_join"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_textview_home"
                android:textColor="@color/color_white"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/iv_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_man_round"
                android:layout_alignBottom="@+id/tv_evaluation"
                />

            <TextView
                android:id="@+id/tv_man_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/act_item_font_size"
                android:textColor="@color/font_color_gray"
                android:layout_alignBottom="@+id/tv_evaluation"
                android:layout_toRightOf="@+id/iv_man"
                android:text="01/05"
                android:layout_marginLeft="3dp"
                />

            <ImageView
                android:id="@+id/iv_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_women_round"
                android:layout_alignBottom="@+id/tv_evaluation"
                android:layout_toRightOf="@+id/tv_man_count"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_woman_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/act_item_font_size"
                android:textColor="@color/font_color_gray"
                android:layout_alignBottom="@+id/tv_evaluation"
                android:layout_toRightOf="@+id/iv_women"
                android:text="01/05"
                android:layout_marginLeft="3dp"
                />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bg_color"
        />
</LinearLayout>