<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="161dp"
        android:background="@drawable/app_commonroof">

        <FrameLayout
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="7dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:src="@drawable/icon_com_delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:textColor="@color/mainfont"
                android:text="支付密码"
                />

        </FrameLayout>

        <TextView
            android:background="@color/color_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:textSize="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入六位支付密码！"
            android:textColor="@color/font_color_gray"
            />

        <com.yapin.shanduo.widget.PasswordInputView
            android:layout_marginTop="5dp"
            android:id="@+id/again_paypswd_pet"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:cursorVisible="false"
            android:background="@color/transparent"
            android:inputType="number"
            android:maxLength="6"
            app:pivBorderColor="@color/color_gray"
            app:pivBorderRadius="2dp"
            app:pivBorderWidth="5px"
            app:pivPasswordColor="@color/black"
            app:pivPasswordLength="6"
            app:pivPasswordWidth="1dp"  />


            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_cancel"
                    android:gravity="center"
                    android:background="@drawable/popwinfow_but_shape"
                    android:orientation="horizontal"
                    android:layout_width="75dp"
                    android:layout_height="25dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_pop_return"
                        />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:textSize="12dp"
                    android:textColor="@color/tab_indicator_color"
                    />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_Determine"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:background="@drawable/button_shape"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:text="确定"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp"/>

            </LinearLayout>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>
