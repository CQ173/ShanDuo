<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon_backgroundpicture"
    tools:context=".ui.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/icon_white_return" />


        <LinearLayout
            android:id="@+id/ll_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>


    </RelativeLayout>


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/img_head"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_defaulthead"
        android:layout_marginTop="68dp"
        />

    <LinearLayout
        android:background="@drawable/login_background_shape"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_accountnumber"
                />

            <EditText
                android:id="@+id/et_login_user"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/app_login_account_hint"
                android:textSize="12dp"
                android:inputType="number"
                android:maxLength="11"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor_shape"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_log_password"
                />

            <EditText
                android:id="@+id/et_login_pwd"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/app_login_password_hint"
                android:maxLength="16"
                android:inputType="textPassword"
                android:textSize="12dp"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor_shape"
                />

        </LinearLayout>



    </LinearLayout>
    
    
    <TextView
        android:layout_gravity="center"
        android:id="@+id/tv_login"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_confrim_login"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="立即登录"
        android:textColor="@color/color_white"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/tv_forget"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_login_btn_forgetpassword"
        android:textColor="@color/colorAccent"
        android:textSize="12dp"
        />
    




</LinearLayout>