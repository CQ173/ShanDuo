<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="7dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/icon_back_arrow" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_marginTop="54dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Settingupanewpaymentpassword"
            android:textSize="15dp"
            android:textColor="@color/mainfont"
            />

        <TextView
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_newpaymentpassword"
            android:textSize="15dp"
            android:textColor="@color/font_color_gray"
            />

        <com.yapin.shanduo.widget.PasswordInputView
            android:layout_marginTop="34dp"
            android:layout_marginLeft="78dp"
            android:layout_marginRight="78dp"
            android:id="@+id/again_paypswd_pet"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:cursorVisible="false"
            android:background="@color/transparent"
            android:inputType="number"
            android:maxLength="6"
            app:pivBorderColor="@color/color_gray"
            app:pivBorderRadius="2dp"
            app:pivBorderWidth="5px"
            app:pivPasswordColor="@color/black"
            app:pivPasswordLength="6"
            app:pivPasswordWidth="1dp"  />

        <Button
            android:id="@+id/bt_Submission"
            android:layout_marginTop="65dp"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape"
            android:text="@string/Completethemodification"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            />

    </LinearLayout>

</LinearLayout>
