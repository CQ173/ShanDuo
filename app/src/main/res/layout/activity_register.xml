    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="225dp"
        android:background="@drawable/login_background_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_accountnumber"
                />

            <EditText
                android:id="@+id/et_phone"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="@string/app_login_phone"
                android:textSize="12dp"
                android:inputType="number"
                android:maxLength="11"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor_shape"
                />

            <TextView
                android:layout_gravity="right|center"
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="发送验证码"
                android:textSize="11dp"
                android:background="@drawable/cod_background_shape"
                android:textColor="@color/color_white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_verification"
                />

            <EditText
                android:id="@+id/et_code"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/app_register_hint"
                android:textSize="12dp"
                android:maxLength="6"
                android:inputType="number"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor_shape"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_log_password"
                />

            <EditText
                android:id="@+id/et_password"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/app_login_password_hint"
                android:textSize="12dp"
                android:maxLength="16"
                android:inputType="textPassword"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/test_cursor_shape"
                />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_gravity="center"
