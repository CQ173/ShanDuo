        android:layout_height="45dp"
        android:background="@drawable/rounded_confrim_login"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="@color/color_white"
        android:textSize="15dp"
        />

</LinearLayout>