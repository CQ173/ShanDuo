<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="22dp"
        android:paddingBottom="19dp"
        >

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_time"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_time"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:checkedButton="@+id/rb_three"
            >

            <RadioButton
                android:id="@+id/rb_three"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:button="@null"
                android:text="3个月"
                android:background="@drawable/charge_selector"
                android:checked="true"
                android:gravity="center"
                android:textSize="@dimen/egg_font_size"
                android:textColor="@drawable/charge_text_color_selector"
                />

            <RadioButton
                android:id="@+id/rb_six"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:button="@null"
                android:text="6个月"
                android:background="@drawable/charge_selector"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:textSize="@dimen/egg_font_size"
                android:textColor="@drawable/charge_text_color_selector"
                />

            <RadioButton
                android:id="@+id/rb_twelve"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:button="@null"
                android:text="12个月"
                android:background="@drawable/charge_selector"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:textSize="@dimen/egg_font_size"
                android:textColor="@drawable/charge_text_color_selector"
                />

            <RadioButton
                android:id="@+id/rb_one"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:button="@null"
                android:text="1个月"
                android:background="@drawable/charge_selector"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:textSize="@dimen/egg_font_size"
                android:textColor="@drawable/charge_text_color_selector"
                />

        </RadioGroup>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:gravity="bottom"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_charge"
            />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="24.6"
            android:textColor="@color/home_vip_color"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="@dimen/egg_font_size"
            android:textColor="@color/font_color_gray"
            android:layout_marginLeft="4dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_go"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_tv_vip"
        android:gravity="center"
        android:text="立即开通"
        android:textSize="15sp"
        android:textColor="@color/white"
        />
    
</LinearLayout>