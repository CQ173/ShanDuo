<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/bg_color"
        android:textSize="@dimen/egg_font_size"
        android:gravity="center_vertical"
        android:textColor="@color/font_color_gray"
        android:text="A"
        android:paddingLeft="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/head"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小猪佩奇"
                    android:textColor="@color/home_title_color"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/tv_home_age"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:text="23"
                    android:textSize="7sp"
                    android:background="@drawable/rounded_tv_sex_women"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:drawableLeft="@drawable/icon_women"
                    android:drawablePadding="2dp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:text="SVIP2"
                    android:textSize="7sp"
                    android:layout_below="@+id/tv_host"
                    android:background="@drawable/rounded_tv_vip"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                >

                <TextView
                    android:id="@+id/tv_online_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/egg_font_size"
                    android:textColor="@color/font_color_gray"
                    />

                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/egg_font_size"
                    android:textColor="@color/font_color_gray"
                    android:text="这是一段个性签名"
                    />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color"
        />


</LinearLayout>