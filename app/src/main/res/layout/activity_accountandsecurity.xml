<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="7dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/icon_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="@color/mainfont"
            android:text="账号与安全"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_flicker"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:layout_gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textview_text_color"
            android:text="闪多号" />

        <TextView
            android:id="@+id/tv_flicker"
            android:layout_gravity="right|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1515"
            android:drawableRight="@drawable/icon_forward"
            android:paddingRight="10dp"
            android:textColor="@color/font_color_gray"
            android:textSize="12sp"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_phone_number"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:paddingLeft="10dp"
            android:textSize="12dp"
            android:layout_gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textview_text_color"
            android:text="手机号" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_gravity="right|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1515"
            android:drawableRight="@drawable/icon_forward"
            android:paddingRight="10dp"
            android:textColor="@color/font_color_gray"
            android:textSize="12sp"
            />

    </FrameLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_login_password"
        android:textColor="@color/textview_text_color"
        android:background="@color/color_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/icon_my_forward"
        android:text="修改闪多密码"/>


    <TextView
        android:layout_marginTop="1dp"
        android:id="@+id/tv_Payment_password"
        android:textColor="@color/textview_text_color"
        android:background="@color/color_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/icon_my_forward"
        android:text="修改支付密码"/>






</LinearLayout>
