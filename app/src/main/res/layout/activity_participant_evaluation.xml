<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor">

    <FrameLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="11dp"
        >

        <TextView
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainfont"
            android:text="活动评价" />

        <ImageView
            android:id="@+id/tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:src="@drawable/icon_back_arrow"
            />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主题：一起吃火锅"
                    android:textColor="@color/mainfont"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/tv_mode"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AA制"
                    android:textColor="@color/mainfont"
                    android:textSize="15dp"
                    />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已结束"
                        android:textColor="@color/font_color_gray"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/tv_Numberofpeople"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还没有人参加哦！"
                        android:textColor="@color/font_color_gray"
                        android:textSize="15dp"
                        />

                </LinearLayout>

                        <ListView
                            android:id="@+id/list_my_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

            </LinearLayout>



        </LinearLayout>

            <Button
                android:id="@+id/bt_Submission"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="340dp"
                android:layout_height="48dp"
                android:background="@color/tab_indicator_color"
                android:text="提交评价"
                android:textSize="15dp"
                android:textColor="@color/colorAccent"
                />

    </LinearLayout>





</LinearLayout>
