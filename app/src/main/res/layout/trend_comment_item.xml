<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="27dp"
        android:background="@color/color_white"
        >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/head"
            />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:padding="5dp"
            android:textColor="@color/home_title_color"
            android:textSize="@dimen/egg_font_size_xx"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_marginLeft="12dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="方威"
                    android:textSize="@dimen/normal_font_size_small"
                    android:textColor="@color/font_color_gray"
                    />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:text="23"
                    android:textSize="7dp"
                    android:background="@drawable/rounded_tv_sex_women"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:drawableLeft="@drawable/icon_women"
                    android:drawablePadding="2dp"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_one_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="皮!"
                android:textSize="@dimen/normal_font_size_big"
                android:textColor="@color/home_title_color"
                />

            <LinearLayout
                android:id="@+id/ll_two_replay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/bg_color"
                android:layout_marginTop="7dp"
                android:paddingTop="12dp"
                android:paddingLeft="11dp"
                android:paddingBottom="12dp"
                android:paddingRight="7dp"
                >

                <TextView
                        android:id="@+id/tv_two_replay1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="来自火星的:"
                        android:textColor="@color/replay_name_color"
                        android:textSize="@dimen/normal_font_size_big"
                        android:maxLines="3"
                        android:ellipsize="end"
                 />

                <TextView
                    android:id="@+id/tv_two_replay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来自火星的:"
                    android:textColor="@color/replay_name_color"
                    android:textSize="@dimen/normal_font_size_big"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/tv_two_replay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来自火星的:"
                    android:textColor="@color/replay_name_color"
                    android:textSize="@dimen/normal_font_size_big"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/tv_replay_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回复量50条>"
                    android:textColor="@color/replay_name_color"
                    android:textSize="@dimen/normal_font_size_big"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                >
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5-11"
                    android:textSize="@dimen/normal_font_size_small"
                    android:textColor="@color/font_color_gray"
                    />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刚刚"
                    android:textSize="@dimen/normal_font_size_small"
                    android:textColor="@color/font_color_gray"
                    android:layout_marginLeft="17dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bg_color"
        />

</LinearLayout>