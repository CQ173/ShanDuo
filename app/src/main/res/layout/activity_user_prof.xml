<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.UserProfActivity"
    android:background="@color/bg_color"
    >
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >

                <RelativeLayout
                    android:id="@+id/rl_bg"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:background="@drawable/icon_man_bg"
                    android:paddingTop="25dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                        >

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_back_arrow"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="5dp"
                        />

                        <TextView
                            android:id="@+id/tv_delete_friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="删除好友"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/egg_font_size_big"
                            android:textColor="@color/home_title_color"
                            android:padding="10dp"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/iv_back"
                        android:layout_marginLeft="15dp"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.yapin.shanduo.widget.CircleImageView
                                android:id="@+id/iv_head_bg"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:src="@drawable/head"
                                />

                            <ImageView
                                android:id="@+id/iv_head"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/head"
                                />

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="bottom"
                            >

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="一直小可爱"
                                android:textSize="15sp"
                                android:textColor="@color/home_title_color"
                                />

                            <TextView
                                android:id="@+id/tv_home_age"
                                android:layout_width="25dp"
                                android:layout_height="10dp"
                                android:text="23"
                                android:textSize="7sp"
                                android:background="@drawable/rounded_tv_sex_women"
                                android:textColor="@color/color_white"
                                android:gravity="center"
                                android:drawableLeft="@drawable/icon_women"
                                android:drawablePadding="2dp"
                                android:layout_marginLeft="5dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/app_modify_Flicker"
                                android:textSize="@dimen/egg_font_size"
                                android:textColor="@color/home_title_color"
                                />

                            <TextView
                                android:id="@+id/tv_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/egg_font_size"
                                android:textColor="@color/home_title_color"
                                android:layout_marginLeft="3dp"
                                android:text="10000"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            >

                            <TextView
                                android:id="@+id/tv_vip"
                                android:layout_width="25dp"
                                android:layout_height="10dp"
                                android:text="SVIP2"
                                android:textSize="7sp"
                                android:background="@drawable/rounded_tv_vip"
                                android:textColor="@color/color_white"
                                android:gravity="center"
                                />


                            <TextView
                                android:id="@+id/tv_level"
                                android:layout_width="25dp"
                                android:layout_height="10dp"
                                android:text="LV90"
                                android:textSize="7sp"
                                android:background="@drawable/rounded_tv_level"
                                android:textColor="@color/color_white"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            >

                            <TextView
                                android:id="@+id/tv_friend_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="15sp"
                                android:textColor="@color/home_title_color"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="好友"
                                android:layout_marginLeft="2dp"
                                android:textSize="10sp"
                                android:textColor="@color/home_title_color"
                                />

                            <TextView
                                android:id="@+id/tv_act_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:layout_marginLeft="25dp"
                                android:textSize="15sp"
                                android:textColor="@color/home_title_color"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="活动"
                                android:layout_marginLeft="2dp"
                                android:textSize="10sp"
                                android:textColor="@color/home_title_color"
                                />

                            <TextView
                                android:id="@+id/tv_trend_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:layout_marginLeft="25dp"
                                android:textColor="@color/home_title_color"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="动态"
                                android:layout_marginLeft="2dp"
                                android:textSize="10sp"
                                android:textColor="@color/home_title_color"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <com.flyco.tablayout.SlidingTabLayout
                    android:id="@+id/sliding_tab"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    app:tl_indicator_color="@color/tab_indicator_color"
                    app:tl_indicator_width="30dp"
                    app:tl_indicator_height="3dp"
                    app:tl_indicator_corner_radius="1dp"
                    app:tl_indicator_gravity="BOTTOM"
                    app:tl_indicator_style="NORMAL"
                    app:tl_tab_space_equal="true"
                    app:tl_textsize="15sp"
                    app:tl_textSelectColor="@color/home_title_color"
                    app:tl_textUnselectColor="@color/font_color_gray"
                    />

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

        </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tab_shape"
        >

        <TextView
            android:id="@+id/tv_add_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="加好友"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/home_title_color"
            android:background="?attr/selectableItemBackground"
            />


    </LinearLayout>

    <com.yapin.shanduo.widget.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

    </com.yapin.shanduo.widget.LoadingView>

</RelativeLayout>
