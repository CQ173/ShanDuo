<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".ui.fragment.PersonFragment">

    <LinearLayout
        android:id="@+id/ll_person_a"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:background="@color/back_rl_color"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/text_setup"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:src="@drawable/icon_my_upset" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/iv_back"
            android:layout_marginLeft="15dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.yapin.shanduo.widget.CircleImageView
                    android:id="@+id/iv_head_bg"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@drawable/head"
                    />

                <ImageView
                    android:id="@+id/ib_Headportrait"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/head"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left"
                >

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一直小可爱"
                    android:textSize="17sp"
                    android:textColor="@color/color_white"
                    />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:text="23"
                    android:textSize="7sp"
                    android:background="@drawable/rounded_tv_sex_women"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:drawableLeft="@drawable/icon_women"
                    android:drawablePadding="2dp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/tv_svip"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:text="SVIP2"
                    android:textSize="7sp"
                    android:background="@drawable/rounded_tv_vip"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    />


                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:text="LV90"
                    android:textSize="7sp"
                    android:background="@drawable/thebackground_shape"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_modify_Flicker"
                    android:textSize="@dimen/egg_font_size"
                    android:textColor="@color/color_white"
                    />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/egg_font_size"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="3dp"
                    android:text="10000"
                    />

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_person_aa"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:background="@color/back_rl_color"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ib_Headportrait_aa"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_defaulthead"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_login_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Loginandregistration"
                android:textColor="@color/colorAccent"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/ll_person_b"
        android:layout_below="@id/ll_person_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ll_zhangs"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >

            <TextView
                android:id="@+id/tv_friend_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="17sp"
                android:textColor="@color/textview_text_color"
                />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_linkman"
                android:layout_marginLeft="2dp"
                android:textSize="17sp"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >

            <TextView
                android:id="@+id/tv_act_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="17sp"
                android:textColor="@color/textview_text_color"
                />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_act"
                android:textSize="17sp"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >

            <TextView
                android:id="@+id/tv_trend_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="17dp"
                android:textColor="@color/textview_text_color"
                />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_trend"
                android:textSize="17sp"
                />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_Myactivities"
            android:textColor="@color/textview_text_color"
            android:background="@color/color_white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_p_activity"
            android:drawableRight="@drawable/icon_my_forward"
            android:text="@string/My_activities"/>
        <!--android:drawableRight="@drawable/icon_img_return"-->


        <TextView
            android:id="@+id/tv_MyDynamics"
            android:textColor="@color/textview_text_color"
            android:background="@color/color_white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_p_dynamic"
            android:drawableRight="@drawable/icon_my_forward"
            android:text="@string/My_dynamics"/>

        <TextView
            android:id="@+id/tv_Creditcenter"
            android:textColor="@color/textview_text_color"
            android:background="@color/color_white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_my_forward"
            android:drawableLeft="@drawable/icon_p_credit"
            android:text="@string/Credit_center"/>

        <TextView
            android:id="@+id/text_mywallet"
            android:textColor="@color/textview_text_color"
            android:background="@color/color_white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_my_forward"
            android:drawableLeft="@drawable/icon_p_wallet"
            android:text="@string/My_wallet"/>

        <TextView
            android:id="@+id/tv_member_center"
            android:textColor="@color/textview_text_color"
            android:background="@color/color_white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_my_forward"
            android:drawableLeft="@drawable/icon_p_member"
            android:text="@string/Member_Center"/>

        <TextView
            android:id="@+id/text_customer_service"
            android:textColor="@color/textview_text_color"
            android:background="@color/color_white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/icon_my_forward"
            android:drawableLeft="@drawable/icon_p_customer_service"
            android:text="@string/Customer_service"/>

    </LinearLayout>

    </ScrollView>

</LinearLayout>