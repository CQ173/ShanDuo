<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_home"
        >

    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/head"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/tv_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小猪佩奇"
                android:textColor="@color/home_title_color"
                android:textSize="12dp"
                android:paddingBottom="2dp"
                android:layout_toStartOf="@+id/tv_time"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/tv_vip"
                android:layout_width="25dp"
                android:layout_height="10dp"
                android:layout_below="@+id/tv_host"
                android:layout_toEndOf="@+id/tv_home_age"
                android:background="@drawable/rounded_tv_vip"
                android:gravity="center"
                android:text="SVIP2"
                android:textColor="@color/color_white"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/tv_lv"
                android:layout_width="25dp"
                android:layout_height="10dp"
                android:layout_below="@+id/tv_host"
                android:layout_toEndOf="@+id/tv_vip"
                android:background="@drawable/rounded_tv_level"
                android:gravity="center"
                android:text="LV1"
                android:textColor="@color/color_white"
                android:layout_marginLeft="2dp"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/tv_home_age"
                android:layout_width="25dp"
                android:layout_height="10dp"
                android:text="23"
                android:textSize="7sp"
                android:layout_marginRight="2dp"
                android:background="@drawable/rounded_tv_sex_women"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:drawableLeft="@drawable/icon_women"
                android:drawablePadding="2dp"
                android:layout_below="@+id/tv_host"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_font_size_big"
                android:textColor="@color/home_sex_man_color"
                android:layout_alignParentRight="true"
                android:text="2018-08-05"
                android:layout_marginBottom="3dp"
                android:layout_alignBottom="@+id/tv_host"
                />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止日期:2018/04/23/23:00"
                android:textSize="10dp"
                android:textColor="@color/font_gray_color"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_time"
                />

        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题:"
            android:textSize="@dimen/egg_font_size_xx"
            android:textColor="@color/font_black_color"
            />

        <TextView
            android:id="@+id/tv_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="约饭"
            android:textSize="@dimen/egg_font_size_xx"
            android:textColor="@color/font_black_color"
            />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AA制"
            android:textSize="@dimen/egg_font_size_xx"
            android:textColor="@color/font_black_color"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_place_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="地点:"
            android:textSize="@dimen/egg_font_size_big"
            android:textColor="@color/font_black_color"
            />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/egg_font_size_big"
            android:textColor="@color/font_black_color"
            android:layout_toRightOf="@+id/tv_place_tag"
            android:text="xx市" />

        <TextView
            android:id="@+id/tv_mile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.6km"
            android:textSize="@dimen/egg_font_size_big"
            android:textColor="@color/home_sex_man_color"
            android:drawableLeft="@drawable/icon_place"
            android:layout_toRightOf="@+id/tv_place"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="活动内容:"
            android:textSize="@dimen/egg_font_size_big"
            android:textColor="@color/font_black_color"
            />

        <TextView
            android:id="@+id/tv_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="还在等什么，赶紧加入吧"
            android:textSize="@dimen/egg_font_size_big"
            android:textColor="@color/font_black_color"
            />

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/icon_three_point"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:paddingEnd="3dp"
            />

        <TextView
            android:id="@+id/tv_join"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:text="去报名"
            android:textSize="@dimen/egg_font_size"
            android:layout_toStartOf="@+id/iv_more"
            android:gravity="center"
            android:background="@drawable/rounded_textview_home"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_evaluation"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:text="信用轨迹"
            android:textSize="10sp"
            android:layout_toLeftOf="@+id/tv_join"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_textview_home"
            />

        <ImageView
            android:id="@+id/iv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_man_round"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_man_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/act_item_font_size"
            android:textColor="@color/font_color_gray"
            android:layout_toRightOf="@+id/iv_man"
            android:text="01/05"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_women_round"
            android:layout_toRightOf="@+id/tv_man_count"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_woman_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/act_item_font_size"
            android:textColor="@color/font_color_gray"
            android:layout_toRightOf="@+id/iv_women"
            android:text="01/05"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_color"
        />
</LinearLayout>